+//Thread join implementation similar to wait excluding the child count
+int thread_sync(int thread_id)
+{
+  int wait, pid;
+  struct proc *p = myproc();
+
+  acquire(&wait_lock);
+
+  for(;;){
+    // Scan through table looking for child thread.
+    wait = 0;
+    for(struct proc *pp = proc; pp < &proc[NPROC]; pp++){
+      acquire(p->memlock_parent);
+      acquire(&pp->lock);
+      //found thread
+      if(pp->isthread && pp->pid == thread_id){
+        wait = 1;
+        // make sure the child isn't still in exit() or swtch().
+        if(pp->state == ZOMBIE){
+          // Found one.
+          pid = pp->pid;
+          freeproc(pp);
+          release(&pp->lock);
+          release(p->memlock_parent);
+          release(&wait_lock);
+          return pid;
+        }
+        release(&pp->lock);
+        release(p->memlock_parent);
+        break;
+      }
+      release(&pp->lock);
+      release(p->memlock_parent);
+    }
+
+    // No point waiting if we don't have the thread.
+    if(!wait || killed(p)){
+      release(&wait_lock);
+      return -1;
+    }
+
+    // Wait for a child to exit.
+    sleep(p, &wait_lock); 
+  }
+}
+//Thread sleep similar to sleep()
+int thread_sleep(uint64 virt_addr, int val)
+{
+  struct proc *p = myproc();
+
+  acquire(p->memlock_parent);
+  //calculating physical adddress from virtual address
+  uint64 stripped_virt_addr = PGROUNDDOWN(virt_addr);
+  uint64 phy_addr = walkaddr(p->pagetable, stripped_virt_addr) + virt_addr -  stripped_virt_addr;
+  //Sleep if value matches page table value
+  if(__sync_bool_compare_and_swap((int *)phy_addr, val, val))
+  {
+    sleep((void *)phy_addr, p->memlock_parent);
+  }
+
+  release(p->memlock_parent);
+
+  return 0;
+}
+//Thread wake similar to wakeup()
+int thread_wake(uint64 virt_addr, uint64 count)
+{
+  struct proc *p = myproc();
+
+  acquire(p->memlock_parent);
+
+  uint64 stripped_virt_addr = PGROUNDDOWN(virt_addr);
+  uint64 phy_addr = walkaddr(p->pagetable, stripped_virt_addr) + virt_addr - stripped_virt_addr;
+  struct proc * pp;
+  //looking for sleeping threads
+  for(pp = proc; count > 0 && pp < &proc[NPROC]; pp++){
+    acquire(&pp->lock);
+    //make the thread runnable
+    if(pp->chan == (void *)phy_addr && pp->state == SLEEPING){
+      pp->state = RUNNABLE;
+      --count;
+    }
+    release(&pp->lock);
+  }
+
+  release(p->memlock_parent);
+
+  return 0;
+}
